<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="smwhalo_build" name="SMWHalo">


	<target name="smwhalo_build">
		<delete dir="bin/zip" />
		<delete file="bin/smwhalo-${version}.zip" />
		<mkdir dir="bin/zip" />
		<copy todir="bin/zip/extensions/SMWHalo/config">
			<fileset dir="../config/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/SMWHalo/DataAPI">
			<fileset dir="../DataAPI/">
