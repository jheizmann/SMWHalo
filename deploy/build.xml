			<fileset dir="../../StringFunctions/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip_ext/extensions/Variables">
			<fileset dir="../../Variables/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip_ext/extensions/DebugTemplate">
			<fileset dir="../../DebugTemplate/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip_ext/extensions/URLArguments">
			<fileset dir="../../URLArguments/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>

		<copy todir="bin/zip_ext/extensions">
			<fileset file="../../LdapAuthentication.php/" />
			<fileset file="../../Cite.php/" />
			<fileset file="../../Cite.i18n.php/" />
			<fileset file="../../Quicktime.php/" />
		</copy>
		<zip destfile="bin/smwhalo-ext-${version}.zip" basedir="bin/zip_ext" />
		<delete dir="bin/zip_ext" />
	</target>

</project>
