		<copy todir="bin/zip/skins/ontoskin2">
			<fileset dir="../../../skins/ontoskin2">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/skins/ontoskin3">
			<fileset dir="../../../skins/ontoskin3">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>

		<copy todir="bin/zip/extensions/SMWHalo">
			<fileset dir="../">
				<include name="COPYING" />
				<include name="INSTALL" />
				<include name="patch.txt" />
				<include name="deploy.xml" />
			</fileset>
		</copy>

		<concat destfile="bin/zip/extensions/SMWHalo/deployGeneralTools.js">
			<fileset dir="bin/zip/extensions/SMWHalo/scripts" includes="ajaxhalo.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/OntologyBrowser" includes="generalTools.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/GeneralGUI" includes="breadcrumb.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/GeneralGUI" includes="generalGUI.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/GeneralGUI" includes="contentSlider.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/Logger" includes="smw_logger.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/Language" includes="SMW_Language.js" />
			<fileset dir="bin/zip/extensions/SMWHalo" includes="SMW_DerivedFactsTab.js" />
		</concat>

		<concat destfile="bin/zip/extensions/SMWHalo/deployGeneralScripts.js">
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/scriptaculous" includes="effects.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/scriptaculous" includes="slider.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/scriptaculous" includes="dragdrop.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/Autocompletion" includes="wick.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_Help.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_Links.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_Help.js" />
