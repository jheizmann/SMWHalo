			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_DataTypes.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_GenericToolbarFunctions.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_Container.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_Marker.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_Relation.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_Properties.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_Refresh.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_DragAndResize.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/SemanticToolbar" includes="SMW_ContextMenu.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/AdvancedAnnotation" includes="SMW_AdvancedAnnotation.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/AdvancedAnnotation" includes="SMW_AnnotationHints.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/AdvancedAnnotation" includes="SMW_GardeningHints.js" />
			<fileset dir="bin/zip/extensions/SMWHalo/scripts/AdvancedAnnotation" includes="SMW_SaveAnnotations.js" />
		</concat>
		
		<concat destfile="bin/zip/extensions/SMWHalo/scripts/OntologyBrowser/deployOntologyBrowser.js">
			<filelist dir="bin/zip/extensions/SMWHalo/scripts/scriptaculous" files="effects.js" />
			<filelist dir="bin/zip/extensions/SMWHalo/scripts/OntologyBrowser" files="ontologytools.js, treeview.js, treeviewActions.js, treeviewData.js" />
			<filelist dir="../../SemanticMediaWiki/skins" files="SMW_tooltip.js" />
		</concat>

		<concat destfile="bin/zip/extensions/SMWHalo/scripts/QueryInterface/deployQueryInterface.js">
			<filelist dir="bin/zip/extensions/SMWHalo/scripts/QueryInterface" files="treeviewQI.js, queryTree.js, Query.js, QIHelper.js, qi_tooltip.js" />
			<filelist dir="../../SemanticMediaWiki/skins" files="SMW_tooltip.js" />
		</concat>


		<zip destfile="bin/smwhalo-${version}.zip" basedir="bin/zip" />
		<delete dir="bin/zip" />
	</target>

	<target name="smwhalo_ext_build">
		<delete dir="bin/zip_ext" />
		<delete file="bin/smwhalo-ext-${version}.zip" />
		<mkdir dir="bin/zip_ext" />

		<copy todir="bin/zip_ext/extensions/DynamicPageList">
			<fileset dir="../../DynamicPageList/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip_ext/extensions/Glossary">
			<fileset dir="../../Glossary/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip_ext/extensions/Lockdown">
			<fileset dir="../../Lockdown/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>

		<copy todir="bin/zip_ext/extensions/DebugTemplate">
			<fileset dir="../../DebugTemplate/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>


		<copy todir="bin/zip_ext/extensions">
			<fileset file="../../LdapAuthentication.php/" />
			<fileset file="../../Cite.php/" />
			<fileset file="../../Cite.i18n.php/" />
			<fileset file="../../Quicktime.php/" />
		</copy>
		<zip destfile="bin/smwhalo-ext-${version}.zip" basedir="bin/zip_ext" />
		<delete dir="bin/zip_ext" />
	</target>

</project>
