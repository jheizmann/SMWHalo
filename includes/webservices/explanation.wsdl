    <part name="arg3" type="xsd:string"></part>
  </message>
  <message name="explainResponse">
    <part name="return" type="xsd:string" />
  </message>
  <message name="MalformedQuery">
    <part name="fault" element="xsd:string" />
  </message>
  <message name="QueryRequestRefused">
    <part name="fault" element="xsd:string" />

  </message>
  <message name="getTripleStoreStatus">
