<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://schemas.xmlsoap.org/wsdl/" 
xmlns:tns="http://explanation.ontobroker.drivers.triplestore.smwplus.ontoprise.com/" 
