            <soap:body use="literal"
                namespace="http://explanation.ontobroker.drivers.triplestore.smwplus.ontoprise.com/" />
        </input>
        <output>

            <soap:body use="literal"
                namespace="http://explanation.ontobroker.drivers.triplestore.smwplus.ontoprise.com/" />
        </output>
        <fault name="MalformedQuery">

            <soap:fault use="literal" name="MalformedQuery" />
        </fault>
        <fault name="QueryRequestRefused">

            <soap:fault use="literal" name="QueryRequestRefused" />
        </fault>
    </operation>

    <operation name="explainQuery">

        <soap:operation
            soapAction="http://explanation.ontobroker.drivers.triplestore.smwplus.ontoprise.com/explainQuery" />
        <input>

            <soap:body use="literal"
                namespace="http://explanation.ontobroker.drivers.triplestore.smwplus.ontoprise.com/" />
        </input>
        <output>

            <soap:body use="literal"
                namespace="http://explanation.ontobroker.drivers.triplestore.smwplus.ontoprise.com/" />
        </output>
    </operation>

  </binding>
  <service name="ExplanationEndpointService">
    <port name="ExplanationEndpointPort" binding="tns:ExplanationEndpointPortBinding">
      <soap:address location="http://{{webservice-endpoint}}/explain" />
    </port>
  </service>
